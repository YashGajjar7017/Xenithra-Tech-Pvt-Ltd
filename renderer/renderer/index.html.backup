  <script>
    // Editable behavior: update line numbers on input [web:39][web:77]
    const codeArea = document.getElementById('codeArea')
    const lineNumbers = document.getElementById('lineNumbers')

    function updateLineNumbers() {
      const lines = codeArea.innerText.split('\n').length
      let html = ''
      for (let i = 1; i <= lines; i++) {
        html += i + '<br>'
      }
      lineNumbers.innerHTML = html
    }

    codeArea.addEventListener('input', () => {
      updateLineNumbers()
    })

    codeArea.addEventListener('keydown', (e) => {
      // Soft tab = 4 spaces
      if (e.key === 'Tab') {
        e.preventDefault()
        document.execCommand('insertText', false, '    ')
      }
    })

    updateLineNumbers()

    // Menu bar functionality
    const menuItems = document.querySelectorAll('.menu-item')
    menuItems.forEach(item => {
      item.addEventListener('click', () => {
        const menu = item.id
        switch (menu) {
          case 'fileMenu':
            alert('File menu: New, Open, Save, etc.')
            break
          case 'editMenu':
            alert('Edit menu: Undo, Redo, Find, etc.')
            break
          case 'selectionMenu':
            alert('Selection menu: Select All, Expand Selection, etc.')
            break
          case 'viewMenu':
            alert('View menu: Toggle Sidebar, Zoom, etc.')
            break
          case 'helpMenu':
            alert('Help menu: Documentation, About, etc.')
            break
        }
      })
    })

    // File selection functionality
    const fileItems = document.querySelectorAll('.file-item')
    const tabLabel = document.querySelector('.editor-header .tab')
    fileItems.forEach(item => {
      item.addEventListener('click', () => {
        // Remove active class from all items
        fileItems.forEach(btn => btn.classList.remove('active'))
        // Add active class to clicked item
        item.classList.add('active')
        // Update tab label
        tabLabel.textContent = item.textContent
      })
    })

    // Sidebar toggle functionality
    const sidebar = document.getElementById('sidebar')
    const sidebarToggle = document.getElementById('sidebarToggle')
    const sidenavToggleMenuBtn = document.getElementById('sidenavToggleMenuBtn')
    const sidebarContent = document.getElementById('sidebarContent')
    const logoText = document.getElementById('logoText')
    const userSection = document.getElementById('userSection')
    const collapsedIcons = document.getElementById('collapsedIcons')
    const toggleIcon = document.querySelector('.toggle-icon')
    let isSidebarOpen = true

    function toggleSidebar() {
      isSidebarOpen = !isSidebarOpen
      if (isSidebarOpen) {
        sidebar.classList.remove('collapsed')
        if (toggleIcon) toggleIcon.textContent = '‚úï'
        sidebarToggle.title = 'Collapse Sidebar'
        sidebarToggle.classList.remove('active')
        setTimeout(() => {
          sidebarContent.style.display = 'block'
          logoText.style.display = 'inline'
          collapsedIcons.style.display = 'none'
          if (isLoggedIn) {
            userSection.style.display = 'block'
          }
        }, 150)
      } else {
        sidebar.classList.add('collapsed')
        if (toggleIcon) toggleIcon.textContent = '‚ò∞'
        sidebarToggle.title = 'Expand Sidebar'
        sidebarToggle.classList.add('active')
        sidebarContent.style.display = 'none'
        logoText.style.display = 'none'
        userSection.style.display = 'none'
        collapsedIcons.style.display = 'flex'
      }
    }

    sidebarToggle.addEventListener('click', toggleSidebar)
    sidenavToggleMenuBtn.addEventListener('click', toggleSidebar)

    // Workspace buttons in menu bar
    const workspaceButtons = document.querySelectorAll('.workspace-buttons button')
    workspaceButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const page = btn.dataset.page
        alert(`Navigate to ${page} page`)
      })
    })

    // Custom language dropdown with animation
    const langDropdown = document.getElementById('langDropdown')
    const langToggle = langDropdown.querySelector('.dropdown-toggle')
    const langLabel = document.getElementById('langLabel')

    langToggle.addEventListener('click', (e) => {
      e.stopPropagation()
      langDropdown.classList.toggle('open')
    })

    langDropdown.querySelectorAll('.dropdown-menu button').forEach((btn) => {
      btn.addEventListener('click', () => {
        const lang = btn.dataset.lang
        langLabel.textContent = btn.textContent
        langDropdown.classList.remove('open')
      })
    })

    document.addEventListener('click', (e) => {
      if (!langDropdown.contains(e.target)) {
        langDropdown.classList.remove('open')
      }
    })
    const collapsedIconBtns = document.querySelectorAll('.collapsed-icon')
    collapsedIconBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const page = btn.dataset.page
        alert(`Navigate to ${page} page`)
      })
    })

    // Login/Logout state management
    const authSection = document.getElementById('authSection')
    const userDisplay = document.getElementById('userDisplay')
    const displayUsername = document.getElementById('displayUsername')
    const accountCircle = document.getElementById('accountCircle')
    const loginBtn = document.getElementById('loginBtn')
    const signupBtn = document.getElementById('signupBtn')
    let isLoggedIn = false // Start with logged out state

    function checkAuthStatus() {
      // Check localStorage for user session
      const userData = localStorage.getItem('user')
      if (userData) {
        try {
          const user = JSON.parse(userData)
          updateAuthState(true, user.username)
          return
        } catch (e) {
          localStorage.removeItem('user')
        }
      }

      // Check server session via API
      fetch('/api/check-auth', {
        method: 'GET',
        credentials: 'include' // Send cookies with request
      })
        .then(res => res.json())
        .then(data => {
          if (data.authenticated && data.user) {
            // Store user data in localStorage for quick access
            localStorage.setItem(
              'user',
              JSON.stringify({
                id: data.user.id,
                username: data.user.username,
                token: data.user.token
              })
            )
            updateAuthState(true, data.user.username)
          } else {
            updateAuthState(false)
          }
        })
        .catch(err => {
          console.error('Auth check error:', err)
          updateAuthState(false)
        })
    }

    function updateAuthState(loggedIn, username = null) {
      isLoggedIn = loggedIn
      if (loggedIn && username) {
        authSection.style.display = 'none'
        userDisplay.style.display = 'flex'
        displayUsername.textContent = username
        userSection.style.display = isSidebarOpen ? 'block' : 'none'
      } else {
        authSection.style.display = 'flex'
        userDisplay.style.display = 'none'
        userSection.style.display = 'none'
      }
    }

    // Login button functionality
    loginBtn.addEventListener('click', () => {
      window.location.href = '/Account/login'
    })

    // Signup button functionality
    signupBtn.addEventListener('click', () => {
      window.location.href = '/Account/Signup'
    })

    // Account circle click (for logged in users)
    accountCircle.addEventListener('click', () => {
      if (isLoggedIn) {
        // Toggle sidebar if collapsed
        if (!isSidebarOpen) {
          toggleSidebar()
        }
        alert('Profile/Account menu: Check sidebar account section')
      } else {
        window.location.href = '/Account/login'
      }
    })

    // Logout functionality (from sidebar)
    const userSectionElement = document.getElementById('userSection')
    if (userSectionElement) {
      const logoutBtn = userSectionElement.querySelector('button:last-child') // Logout button
      if (logoutBtn) {
        logoutBtn.addEventListener('click', () => {
          if (confirm('Are you sure you want to logout?')) {
            localStorage.removeItem('user')
            updateAuthState(false)
            alert('Logged out successfully!')
            window.location.href = '/'
          }
        })
      }
    }

    // Initialize auth state on page load
    checkAuthStatus()

    // Terminal + API demo using fetch [web:76][web:81][web:84]
    const runBtn = document.getElementById('runBtn')
    const terminalBody = document.getElementById('terminalBody')
    const cliArgsInput = document.getElementById('cliArgs')

    function appendTerminalLine(html) {
      const line = document.createElement('div')
      line.className = 'terminal-line'
      line.innerHTML = html
      terminalBody.appendChild(line)
      terminalBody.scrollTop = terminalBody.scrollHeight
    }

    runBtn.addEventListener('click', async () => {
      // small click animation
      runBtn.style.filter = 'brightness(1.5)'
      runBtn.style.transform = 'translateY(-2px) scale(1.03)'
      setTimeout(() => {
        runBtn.style.filter = 'brightness(1)'
        runBtn.style.transform = ''
      }, 200)

      const lang = langLabel.textContent
      const args = cliArgsInput.value
      const code = codeArea.innerText

      appendTerminalLine(
        `<span class="prompt">nova@glass</span>:<span class="muted">~</span>$ run '${lang}' ${args || ''}`
      )
      appendTerminalLine(`<span class="muted">contacting demo API...</span>`)

      try {
        // Demo API (public placeholder that echoes data) [web:81]
        const res = await fetch('https://httpbin.org/post', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ lang, args, code })
        })

        const json = await res.json()
        // Fake "output" made from response metadata
        appendTerminalLine(`<span class="prompt">stdout</span>: response status ${res.status}`)
        appendTerminalLine(
          `<span class="prompt">stdout</span>: bytes sent ${JSON.stringify(json.json).length}`
        )
        appendTerminalLine(`<span class="prompt">stdout</span>: url ‚Üí ${json.url}`)
      } catch (err) {
        appendTerminalLine(`<span class="error">error</span>: ${err.message}`)
      }
    })
  </script>
